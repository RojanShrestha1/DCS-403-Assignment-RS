pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'No build needed for Python'
            }
        }

        stage('Test') {
            steps {
                sh 'python3 -m py_compile hello.py'
            }
        }

        stage('Run') {
            steps {
                sh 'python3 hello.py'
            }
        }
    }
}
