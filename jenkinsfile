pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/RojanShrestha1/DCS-403-Assignment-RS.git'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building the project..."'
                sh 'ls -la'
            }
        }
        stage('Test') {
            steps {
               sh 'python3 -m py_compile hello.py'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploy step (simulated)"'
            }
        }
    }
}